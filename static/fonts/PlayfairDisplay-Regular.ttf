body, html {
    margin: 0;
    padding: 0;
    height: 100%;
    font-family: 'Playfair Display', serif;
    background-color: #121212; /* Fondo oscuro */
    color: #ffffff; /* Texto blanco */
}

.container {
    display: flex;
    justify-content: center;
    align-items: center;
    height: 100%;
    text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.5);
}

h1 {
    font-size: 4em;
    text-align: center;
}
